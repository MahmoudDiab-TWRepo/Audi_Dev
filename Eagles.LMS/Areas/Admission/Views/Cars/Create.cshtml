                                       {
                                           @class = "form-control",

                                           placeholder = "Price"
                                       })
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">CarCode</label>
                                            @Html.TextBoxFor(s => s.CarCode, null, new
