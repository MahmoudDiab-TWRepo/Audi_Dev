                                        <table class="table table-striped- table-bordered table-hover table-checkable display res" id="tblCatCreate">
                                            <tbody>
                                                <tr ng-cloak ng-repeat="property in CategoryPropeties track by $index">
                                                    <td ng-if="property.DataType==0">
                                                        <div class=" col-sm-12 fl-r mt-4 ">
