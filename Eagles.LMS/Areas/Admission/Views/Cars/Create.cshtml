                                                                <input ng-model="property.PropertyName" name="PropertyName{{$index + 1}}" type="date" class="form-control circle" id="{{$index}}">

                                                                <span class="placeholder">   {{propName[$index]}} </span>
                                                                <span class="kt-input-icon__icon kt-input-icon__icon--left">
